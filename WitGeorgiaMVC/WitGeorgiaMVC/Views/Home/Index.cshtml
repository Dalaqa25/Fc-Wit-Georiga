@{
    ViewData["Title"] = "Home Page";
}

<h2>Football Players</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Player</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Created Date</th>
        <th>Salary</th>
        <th>Phone Number</th>
        <th>Personal Number</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var player in Model)
    {
    <tr>
        <td>@player.FirstName</td>
        <td>@player.LastName</td>
        <td>@player.CreatedDate.ToShortDateString()</td>
        <td>@player.Salary</td>
        <td>@player.PhoneNumber</td>
        <td>@player.PersonalNumber</td>
        <td>
            <a asp-action="Edit" asp-route-id="@player.Id" class="btn btn-sm btn-warning">Edit</a>
            <a asp-action="Delete" asp-route-id="@player.Id" class="btn btn-sm btn-danger">Delete</a>
        </td>
    </tr>
    }
    </tbody>
</table>
